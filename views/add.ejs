<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-white px-10 text-black pt-24 ">
    <h1 class="text-xl text-center">Create a new Post</h1>
    <div class="flex justify-center mt-1">
        <hr class=" w-1/2">
    </div>


    <div class="flex justify-center items-center mt-6"> <!-- Centering the form and label -->
        <form action="/createpost" method="post" enctype="multipart/form-data" class="w-1/3">
            <div class="input_image flex items-center justify-center text-white mb-4">
                <label for="file-upload" class=" w-12 h-12 rounded-full bg-blue-600 flex justify-center items-center">
                    <i class="ri-file-add-fill text-2xl"></i>
                </label>
            </div>
            <input id="file-upload" class="hidden" type="file" name="postimage">
            <input class="block w-full px-3 py-2 border-2 rounded-xl text-black mb-4" type="text" placeholder="Title" name="title">
            <textarea class="block w-full px-3 py-2 border-2 rounded-xl text-black h-40 mb-3" type="text" placeholder="Description" name="description"></textarea>
            <input class="block w-full px-3 py-2 bg-blue-600 rounded-full text-white" type="submit" value="Create Post">
        </form>
    </div>
</div>


<% include ./partials/footer.ejs %>