<% include ./partials/header.ejs %>

  <div class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1509343256512-d77a5cb3791b?q=80&w=3270&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-center bg-cover flex items-center justify-center">
    <div class="w-[25vw] bg-white px-4 py-10 rounded-3xl">

      <div class="logos flex justify-center items-center w-full">
        <img src="images/picblend_3.png" class="w-2/5 mb-3" alt="">
      </div>

       <h1 class="text-2xl tracking-tight text-center font-semibold text-zinc-800 leading-none mb-1">Unlock Endless Inspiration</h1>
       <p class="inline-block mt-1 mb-2 text-sm font-semibold bg-2 text-zinc-700  text-center w-full">Log in to see more</p>
       <form action="/login" method="post">
          <% if(error.length > 0){ %>
            <p class="font-semibold text-sm text-red-500 mx-2 capitalize"><%= error %></p>
          <% } %>
          <p class="px-2 text-sm">Username</p>
          <input class="border-2 rounded-2xl w-full px-3 py-2 mb-2" type="text" name="username" placeholder="Username">

          <p class="px-2 text-sm">Password</p>
          <input class="border-2 rounded-2xl w-full px-3 py-2" type="password" name="password" placeholder="Password">
          <a class="mt-2 font-semibold text-zinc-700 inline-block px-1 hover:underline" href="#">Forgot your Password?</a>
          <input class=" rounded-2xl mt-2 w-full px-3 py-2 bg-blue-600 text-white rounded-full" type="submit" name="" id="" value="Login">

          <p class="text-xs font-semibold text-zinc-700 mt-7 text-center w-2/3 mx-auto">By continuing, you agree to Pinterest's <b>Terms of Service</b> and acknowledge you've read our <b>Privacy Policy</b>. Notice at collection</p> 
       </form>

       <div class="flex justify-center mt-0.5">
        <hr class=" w-1/2">
       </div>

       <a class="inline-block mt-2 text-sm font-semibold bg-2 text-zinc-700  text-center w-full" href="/register">Not on Pinterest yet? <b>Sign up</b></a>
    </div>
  </div>



